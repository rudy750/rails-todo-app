{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/log-prompt.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/pre-tool-check.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p ./logs && echo \"[$(date '+%Y-%m-%d %H:%M:%S')] Session ended\" >> ./logs/copilot-activity.log"
          }
        ]
      }
    ]
  }
}
