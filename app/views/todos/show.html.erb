<div class="row">
  <div class="col-lg-6 mx-auto">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h2 class="mb-0"><%= @todo.title %></h2>
      </div>
      <div class="card-body">
        <% if @todo.description.present? %>
          <p class="card-text"><%= @todo.description %></p>
        <% end %>

        <p class="card-text">
          <strong>Status:</strong>
          <% if @todo.completed? %>
            <span class="badge bg-success">Completed</span>
          <% else %>
            <span class="badge bg-warning text-dark">Pending</span>
          <% end %>
        </p>

        <p class="card-text">
          <small class="text-muted">
            Created <%= time_ago_in_words(@todo.created_at) %> ago
          </small>
        </p>

        <div class="d-grid gap-2">
          <%= link_to "Edit", edit_todo_path(@todo), class: "btn btn-primary" %>
          <%= button_to "Delete", 
              todo_path(@todo), 
              method: :delete,
              class: "btn btn-danger",
              form: { data: { turbo_confirm: "Are you sure?" } } %>
          <%= link_to "Back to List", root_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
