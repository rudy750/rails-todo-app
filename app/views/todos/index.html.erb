<div class="row">
  <div class="col-lg-8 mx-auto">
    <h1 class="mb-4">My Todo List</h1>

    <!-- New Todo Form -->
    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        <h5 class="mb-0">Add New Todo</h5>
      </div>
      <div class="card-body">
        <%= form_with(model: @todo, local: true, class: "needs-validation") do |form| %>
          <% if @todo.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h5>
              <ul class="mb-0">
                <% @todo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "What needs to be done?", required: true %>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Additional details (optional)" %>
          </div>

          <div class="d-grid">
            <%= form.submit "Add Todo", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Todos List -->
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">All Todos (<%= @todos.count %>)</h5>
      </div>
      <div class="card-body">
        <% if @todos.empty? %>
          <p class="text-center text-muted my-4">No todos yet! Add one above to get started.</p>
        <% else %>
          <div id="todos">
            <%= render @todos %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
