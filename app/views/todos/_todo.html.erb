<div class="card mb-3 <%= 'border-success' if todo.completed? %>" id="<%= dom_id(todo) %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div class="flex-grow-1">
        <h5 class="card-title <%= 'text-decoration-line-through text-muted' if todo.completed? %>">
          <%= todo.title %>
        </h5>
        <% if todo.description.present? %>
          <p class="card-text <%= 'text-muted' if todo.completed? %>">
            <%= todo.description %>
          </p>
        <% end %>
        <p class="card-text">
          <small class="text-muted">
            Created <%= time_ago_in_words(todo.created_at) %> ago
          </small>
        </p>
      </div>
      
      <div class="btn-group ms-3" role="group">
        <%= button_to toggle_todo_path(todo), 
            method: :patch, 
            class: "btn btn-sm #{todo.completed? ? 'btn-warning' : 'btn-success'}",
            form: { data: { turbo_frame: "_top" } } do %>
          <%= todo.completed? ? 'â†©ï¸ Undo' : 'âœ“ Complete' %>
        <% end %>
        
        <%= link_to "âœï¸ Edit", edit_todo_path(todo), class: "btn btn-sm btn-primary" %>
        
        <%= button_to "ğŸ—‘ï¸ Delete", 
            todo_path(todo), 
            method: :delete,
            class: "btn btn-sm btn-danger",
            form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>
    
    <% if todo.completed? %>
      <span class="badge bg-success mt-2">Completed</span>
    <% else %>
      <span class="badge bg-warning text-dark mt-2">Pending</span>
    <% end %>
  </div>
</div>
