<div class="row">
  <div class="col-lg-6 mx-auto mt-5">
    <div class="card border-0 shadow-sm rounded-4 p-4 bg-white">
      <h2 class="fw-bold mb-4 text-dark">New Task</h2>

      <%= form_with(model: @todo, local: true) do |form| %>
        <% if @todo.errors.any? %>
          <div class="alert alert-danger rounded-3 border-0 mb-4">
            <ul class="mb-0 small">
              <% @todo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= form.label :title, class: "form-label text-muted small fw-bold text-uppercase" %>
          <%= form.text_field :title, class: "form-control form-control-minimal", placeholder: "e.g. Buy groceries", required: true %>
        </div>

        <div class="mb-4">
          <%= form.label :description, class: "form-label text-muted small fw-bold text-uppercase" %>
          <%= form.text_area :description, class: "form-control form-control-minimal", rows: 4, placeholder: "Add details..." %>
        </div>

        <div class="d-flex justify-content-end gap-2">
           <%= link_to "Cancel", root_path, class: "btn btn-link text-muted text-decoration-none" %>
           <%= form.submit "Create Task", class: "btn btn-primary px-4 rounded-3 fw-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
