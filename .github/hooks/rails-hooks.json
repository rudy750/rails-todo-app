{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "type": "command",
        "bash": "./scripts/validate-environment.sh",
        "cwd": ".",
        "timeoutSec": 10
      }
    ],
    "userPromptSubmitted": [
      {
        "type": "command",
        "bash": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] User prompt received\" >> logs/copilot-activity.log",
        "cwd": ".",
        "timeoutSec": 5
      }
    ],
    "preToolUse": [
      {
        "type": "command",
        "bash": "./scripts/pre-tool-check.sh",
        "cwd": ".",
        "timeoutSec": 5
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": "cat >> logs/tool-usage.jsonl",
        "cwd": ".",
        "timeoutSec": 5
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] Copilot session ended\" >> logs/copilot-activity.log",
        "cwd": ".",
        "timeoutSec": 5
      }
    ]
  }
}
